<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product</title>
    <!-- Ensure linking with Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="public/admin.css">
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      
      <!-- Sidebar -->
      <div class="col-md-3 bg-dark text-white p-4">
        <h2 class="mb-4">Admin Dashboard</h2>
        <ul class="list-unstyled">
          <li><a href="#" class="text-white">Manage Products</a></li>
          <li><a href="#" class="text-white">Manage Orders</a></li>
          <li><a href="#" class="text-white">Manage Users</a></li>
        </ul>
      </div>

      <!-- Main content -->
      <div class="col-md-9 p-4">
        <h2 class="mb-4">Edit Product</h2>
        
        <!-- Form to edit product -->
        <form id="editProductForm" action="/admin/edit/<%= product._id %>" method="POST" enctype="multipart/form-data" class="mb-4">  <!--action="/api/products/<%= product._id %>"-->
          
          <!-- Product Name -->
          <div class="form-group mb-3">
            <label for="name" class="form-label">Product Name</label>
            <input type="text" id="name" name="title" value="<%= product.title %>" required class="form-control">
          </div>

          <!-- Price -->
          <div class="form-group mb-3">
            <label for="price" class="form-label">Price</label>
            <input type="number" id="price" name="price" value="<%= product.price %>" required class="form-control">
          </div>

          <!-- Image -->
          <div class="form-group mb-3">
            <label for="image" class="form-label">Image</label>
            <input type="file" id="image" name="image" class="form-control">
            <p>Current Image: <img src="<%= product.image %>" alt="Product Image" style="max-width: 100px;"></p>
          </div>

          <!-- Description -->
          <div class="form-group mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea id="description" name="description" rows="4" required class="form-control"><%= product.description %></textarea>
          </div>

          <!-- Author -->
          <div class="form-group mb-3">
            <label for="author" class="form-label">Author</label>
            <input type="text" id="author" name="author" value="<%= product.author %>" required class="form-control">
          </div>

          <!-- Publisher -->
          <div class="form-group mb-3">
            <label for="publisher" class="form-label">Publisher</label>
            <input type="text" id="publisher" name="publisher" value="<%= product.publisher %>" class="form-control">
          </div>

          <!-- Publish Date (auto-filled with product creation date, not editable) -->
          <div class="form-group mb-3">
            <label for="publishDate" class="form-label">Publish Date</label>
            <input type="date" id="publishDate" name="publishDate" value="<%= product.publishDate ? new Date(product.publishDate).toISOString().split('T')[0] : '' %>" class="form-control" required> <!--value="<%= product.publishDate.toISOString().split('T')[0] %>"-->
          </div>

          <!-- Submit Button -->
          <input type="submit"  class="btn btn-primary" value="Update Product">
        </form>
      </div>
    </div>
  </div>

  <!-- Ensure linking with Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>